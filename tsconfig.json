{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ES6",
        "target": "ES5",
        "allowJs": true,
        // "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "node",
            "jquery"
        ],
        "paths": {
            "@cweb/*": ["./src/components/web/*"],
            "@cmobile/*": ["./src/components/mobile/*"],
            "@ccore/*": ["./src/components/core/*"],
            "@cpack/*": ["./src/components/packages/*"],
            "@cutil/*": ["./src/components/util/*"],
            "@cstyle/*": ["./src/components/style/*"]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost",
            "es5",
            "es2015.promise"
        ]
    },
    "include": [
        "module/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": ["node_modules"],
    "files": [
        "types/vue-shims.d.ts",
        "types/webgis.d.ts"
    ]
}